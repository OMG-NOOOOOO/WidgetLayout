<com.rexy.widgets.group.PageScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.rexy.widgets.group.LabelLayout
        android:id="@+id/labelLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"
        android:background="@color/partBackground"
        app:alignCenterColumns="2"
        app:alignRightColumns="3"
        app:borderBottomColor="#0f0"
        app:borderLeftColor="#f00"
        app:borderRightColor="#00f"
        app:borderTopColor="#000"
        app:columnCenterVertical="true"
        app:columnMinHeight="60dp"
        app:columnNumber="4"
        app:contentMarginBottom="10dp"
        app:contentMarginHorizontal="5dp"
        app:contentMarginLeft="10dp"
        app:contentMarginRight="10dp"
        app:contentMarginTop="10dp"
        app:contentMarginVertical="8dp"
        app:dividerColorHorizontal="#4790D3"
        app:dividerColorVertical="#363F59"
        app:dividerPaddingHorizontal="10dp"
        app:dividerPaddingVertical="1dp"
        app:foregroundColor="#000"
        app:stretchColumns="0" />

    <com.rexy.widgets.group.WrapLayout
        android:id="@+id/wrapLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@color/partBackground"
        app:borderBottomColor="#363F59"
        app:borderLeftColor="#363F59"
        app:borderRightColor="#363F59"
        app:borderTopColor="#363F59"
        app:columnCenterVertical="true"
        app:columnNumber="3"
        app:contentMarginBottom="5dp"
        app:contentMarginHorizontal="8dp"
        app:contentMarginLeft="5dp"
        app:contentMarginRight="5dp"
        app:contentMarginTop="5dp"
        app:contentMarginVertical="8dp"
        app:dividerColorHorizontal="#479003"
        app:dividerColorVertical="#4790D3"
        app:dividerPaddingVertical="10dp"
        app:stretchColumns="*" />

    <com.rexy.widgets.group.ColumnLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@color/optionBackground"
        app:borderBottomColor="#363F59"
        app:borderLeftColor="#363F59"
        app:borderRightColor="#363F59"
        app:borderTopColor="#363F59"
        app:columnCenterVertical="true"
        app:columnNumber="4"
        app:contentMarginBottom="5dp"
        app:contentMarginLeft="5dp"
        app:contentMarginRight="3dp"
        app:contentMarginTop="5dp"
        app:contentMarginVertical="10dp"
        app:dividerColorVertical="#4790D3"
        app:dividerPaddingVertical="10dp"
        app:stretchColumns="*">

        <com.rexy.widgets.view.FadeTextButton
            android:id="@+id/viewRemove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="REMOVE"
            android:textColor="@color/textButton"
            android:textSize="16sp" />

        <com.rexy.widgets.view.FadeTextButton
            android:id="@+id/viewAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="ADD"
            android:textColor="@color/textButton"
            android:textSize="16sp" />

        <com.rexy.widgets.view.FadeTextButton
            android:id="@+id/viewAddFast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="ADD-FAST"
            android:textColor="@color/textButton"
            android:textSize="16sp" />

        <ToggleButton
            android:id="@+id/toggleOptView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:textColor="@color/textButton"
            android:textOff="WrapLayout"
            android:textOn="LabelLayout"
            android:textSize="12dp" />
    </com.rexy.widgets.group.ColumnLayout>

    <com.rexy.widgets.group.WrapLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:maxHeight="200dp"
        android:minWidth="100dp"
        android:gravity="center"
        app:borderBottomColor="#363F59"
        app:borderLeftColor="#363F59"
        app:borderRightColor="#363F59"
        app:borderTopColor="#363F59"
        app:contentMarginBottom="5dp"
        app:contentMarginHorizontal="8dp"
        app:contentMarginLeft="5dp"
        app:contentMarginRight="3dp"
        app:contentMarginTop="5dp"
        app:contentMarginVertical="10dp"
        app:dividerColorVertical="#4790D3"
        app:dividerPaddingVertical="10dp"
        app:lineMinItemCount="100"
        app:weightSupport="true">

        <com.rexy.widgets.view.FadeTextButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:background="#f00"
            android:padding="10dp"
            android:text="weight2" />

        <com.rexy.widgets.view.FadeTextButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#0f0"
            android:padding="10dp"
            android:text="wrap" />

        <com.rexy.widgets.view.FadeTextButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#00f"
            android:padding="10dp"
            android:text="weight1" />
    </com.rexy.widgets.group.WrapLayout>
</com.rexy.widgets.group.PageScrollView>