<com.rexy.widgets.layout.PageScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.rexy.widgets.layout.ColumnLayout
        android:id="@+id/columnLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"
        android:background="@color/partBackground"
        android:minHeight="150dp"
        app:alignCenterColumns="2"
        app:alignRightColumns="3"
        app:borderBottomColor="#F00"
        app:borderLeftColor="#00f"
        app:borderRightColor="#94f"
        app:borderBottomWidth="0.5dp"
        app:borderRightWidth="0.5dp"
        app:borderTopColor="#000"
        app:columnCenterVertical="true"
        app:columnMinHeight="60dp"
        app:columnNumber="4"
        app:contentMarginBottom="10dp"
        app:contentMarginLeft="10dp"
        app:contentMarginRight="10dp"
        app:contentMarginTop="10dp"
        app:itemMarginHorizontal="5dp"
        app:itemMarginVertical="10dp"
        app:dividerColorHorizontal="#4790D3"
        app:dividerColorVertical="#363F59"
        app:dividerPaddingHorizontal="10dp"
        app:dividerPaddingVertical="5dp"
        app:foregroundColor="#000"
        app:stretchColumns="0" />

    <com.rexy.widgets.layout.ColumnLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@color/optionBackground"
        app:borderBottomColor="#363F59"
        app:borderLeftColor="#363F59"
        app:borderRightColor="#363F59"
        app:borderTopColor="#363F59"
        app:columnCenterVertical="true"
        app:columnNumber="3"
        app:contentMarginBottom="5dp"
        app:contentMarginLeft="5dp"
        app:contentMarginRight="5dp"
        app:contentMarginTop="5dp"
        app:itemMarginVertical="10dp"
        app:dividerColorVertical="#4790D3"
        app:dividerPaddingVertical="10dp"
        app:stretchColumns="*">

        <com.rexy.example.extend.FadeTextButton
            android:id="@+id/viewRemove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="REMOVE"
            android:textColor="@color/textButton"
            android:textSize="18sp" />

        <com.rexy.example.extend.FadeTextButton
            android:id="@+id/viewAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="ADD"
            android:textColor="@color/textButton"
            android:textSize="18sp" />

        <com.rexy.example.extend.FadeTextButton
            android:id="@+id/viewAddFast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="ADD-FAST"
            android:textColor="@color/textButton"
            android:textSize="18sp" />
    </com.rexy.widgets.layout.ColumnLayout>
</com.rexy.widgets.layout.PageScrollView>